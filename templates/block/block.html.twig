{%
  set classes = [
    'bl',
    'bl-' ~ configuration.provider|clean_class,
    'bl-' ~ plugin_id|clean_class,
  ]
%}
<div{{ attributes.addClass(classes)|without('id') }}>
  {{ title_prefix }}
  {% if label %}
    <div{{ title_attributes.addClass('bl-title') }}>{{ label }}</div>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    {{ content }}
  {% endblock %}
</div>
